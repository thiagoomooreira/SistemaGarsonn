@model SistemaGarsonWeb.ViewModel.ColaboradorVM
<!-- INICIO DA TABELA-->

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-4">
                    <h2>Todos os <b>Colaboradores</b></h2>
                </div>
            </div>
        </div>
        <label>Pesquisar</label>
        <form class="form-inline active-pink-4">
            @using(Html.BeginForm("Buscar", "Colaboradores", FormMethod.Post)) {
            <div class="filter-group">
                <button style="margin-top:-5px" type="submit" class="btn btn-primary px-3 waves-effect waves-light"><i class="fas fa-search"></i></button>
                @Html.EditorFor(m => m.Campo, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Nome do Colaborador" } })
            </div>
            }
        </form>
        <div id="addbutton">
            <div class="ballon">
                <a data-url="Colaboradores" data-toggle="modal"
                   data-target="#modal" class="ModalCadastrar">Cadastrar</a>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>NOME</th>
                    <th>CPF</th>
                    <th>FUNÇÃO</th>
                    <th>TELEFONE</th>
                    <th>VISUALIZAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var c in Model.ListarColaboradores()) {
                    <tr>
                        <td>@Html.DisplayFor(a => c.IdColaborador)</td>
                        <td>@Html.DisplayFor(a => c.Nome)</td>
                        <td>@Html.DisplayFor(a => c.Cpf)</td>
                        <td>@Html.DisplayFor(a => c.Funcao)</td>
                        <td>@Html.DisplayFor(a => c.Telefone)</td>
                        <td>
                            <button data-url="Colaboradores/Editar/?IdColaborador=@c.IdColaborador" data-toggle="modal" data-target="#modal" type="button" class="ModalEditar btn btn-primary px-3"><i class="fas fa-angle-right"></i></button>
                        </td>
                        <td>
                            <button data-url="Colaboradores/Deletar/?IdColaborador=@c.IdColaborador" data-toggle="modal" data-target="#modal" type="button" class="ModalDeletar btn btn-danger px-3"><i class="far fa-trash-alt"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                </div>
            </div>
        </div>
    </div>
</div>