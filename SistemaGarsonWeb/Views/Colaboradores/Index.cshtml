@model SistemaGarsonWeb.ViewModel.ColaboradorVM
<!-- INICIO DA TABELA-->
<div class="container">
    <div class="table-wrapper">
        <a data-url="Colaboradores" data-toggle="modal" data-target="#modal" class="ModalCadastrar">Cadastrar</a>
        <div class="table-title">
            <div class="row">
                <div class="col-sm-4">
                    <h2>Todos os <b>Colaboradores</b></h2>
                </div>
            </div>
        </div>
        <div class="table-filter">
            <div class="row">
                <div class="col-sm-12">
                    @using(Html.BeginForm("Buscar", "Colaboradores", FormMethod.Post)) {
                        <button type="submit" class="btn btn-primary px-3"><i class="fas fa-search"></i></button>
                        <div class="filter-group">
                            <label>Pesquisar</label>
                            @Html.EditorFor(m => m.Campo, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Nome do Colaborador" } })
                        </div>
                    }
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>NOME</th>
                    <th>CPF</th>
                    <th>FUNÇÃO</th>
                    <th>TELEFONE</th>
                    <th>VISUALIZAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var c in Model.ListarColaboradores()) {
                    <tr>
                        <td>@Html.DisplayFor(a => c.IdColaborador)</td>
                        <td>@Html.DisplayFor(a => c.Nome)</td>
                        <td>@Html.DisplayFor(a => c.Cpf)</td>
                        <td>@Html.DisplayFor(a => c.Funcao)</td>
                        <td>@Html.DisplayFor(a => c.Telefone)</td>
                        <td>
                            <button data-url="Colaboradores/Editar/?IdColaborador=@c.IdColaborador" data-toggle="modal" data-target="#modal" type="button" class="ModalEditar btn btn-primary px-3"><i class="fas fa-angle-right"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                </div>
            </div>
        </div>
    </div>
</div>