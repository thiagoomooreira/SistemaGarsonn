@model SistemaGarsonWeb.ViewModel.ColaboradorVM
<!-- INICIO DA TABELA-->
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-4">
                    <h2>Todos os <b>Colaboradores</b></h2>
                </div>
            </div>
        </div>
        <div class="table-filter">
            <div class="row">
                <div class="col-sm-12">
                    <button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i></button>
                    <div class="filter-group">
                        <label>Pesquisar</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>                
                <tr>
                    <th>#</th>
                    <th>NOME</th>
                    <th>CPF</th>
                    <th>FUNÇÃO</th>
                    <th>TELEFONE</th>
                    <th>VISUALIZAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var c in Model.ListarColaboradores()) {
                    <tr>
                        <td>@Html.DisplayFor(a => c.IdColaborador)</td>
                        <td>@Html.DisplayFor(a => c.Nome)</td>
                        <td>@Html.DisplayFor(a => c.Cpf)</td>
                        <td>@Html.DisplayFor(a => c.Funcao)</td>
                        <td>@Html.DisplayFor(a => c.Telefone)</td>
                        <td><button type="button" class="btn btn-primary"><i class="glyphicon glyphicon-chevron-right"></i></button></td>
                    </tr>
                }
                </tbody>
        </table>
    </div>
</div>