@model SistemaGarsonWeb.ViewModel.PratoVM
<!-- INICIO DA TABELA-->
<div class="container">
    <!-- Editable table -->
    
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-4">
                    <h2>Todas os <b>Pratos</b></h2>
                </div>
            </div>
        </div>
        <label>Pesquisar</label>
        <form class="form-inline active-pink-4">
            @using(Html.BeginForm("Buscar", "Pratos", FormMethod.Post)) {
                <div class="filter-group">
                    <button style="margin-top:-5px" type="submit" class="btn btn-primary px-3 waves-effect waves-light"><i class="fas fa-search"></i></button>
                    @Html.EditorFor(m => m.Campo, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Nome do Prato" } })
                </div>
            }
        </form>
        <div id="addbutton">
            <div class="ballon">
                <a data-url="Pratos" data-toggle="modal"
                   data-target="#modal" class="ModalCadastrar">Cadastrar</a>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>NOME</th>
                    <th>DESCRIÇÃO</th>
                    <th>PREÇO</th>
                    <th>EDITAR</th>
                    <th>DELETAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var p in Model.ListarPratos()) {
                    <tr>
                        <td>@Html.DisplayFor(l => p.IdPrato)</td>
                        <td>@Html.DisplayFor(l => p.Nome)</td>
                        <td>@Html.DisplayFor(l => p.Descricao)</td>
                        <td>@Html.DisplayFor(l => p.Preco)</td>
                        <td>
                            <button data-url="Pratos/Editar/?IdPrato=@p.IdPrato" data-toggle="modal" data-target="#modal" type="button" class="ModalEditar btn btn-primary px-3"><i class="far fa-edit"></i></button>
                        </td>
                        <td>
                            <button data-url="Pratos/Deletar/?IdPrato=@p.IdPrato" data-toggle="modal" data-target="#modal" type="button" class="ModalDeletar btn danger-color px-3"><i class="far fa-trash-alt"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                </div>
            </div>
        </div>
    </div>
</div>