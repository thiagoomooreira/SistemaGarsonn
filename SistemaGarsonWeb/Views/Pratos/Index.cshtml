                <table class="table table-bordered table-responsive-md table-striped text-center">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">NOME</th>
                        <th class="text-center">PRATO</th>
                        <th class="text-center">PREÇO</th>
                        <th class="text-center">VISUALIZAR</th>
                    </tr>
                    @foreach(var p in Model.ListarPratos()) {
                    <tr>

                        <td class="pt-3-half" contenteditable="true">@Html.DisplayFor(l => p.IdPrato)</td>
                        <td class="pt-3-half" contenteditable="true">@Html.DisplayFor(l => p.Nome)</td>
                        <td class="pt-3-half" contenteditable="true">@Html.DisplayFor(l => p.Descricao)</td>
                        <td class="pt-3-half" contenteditable="true">@Html.DisplayFor(l => p.Preco)</td>
                        <td>
                            <button type="button" class="btn btn-primary px-3"><i class="fas fa-angle-right"></i></button>
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
