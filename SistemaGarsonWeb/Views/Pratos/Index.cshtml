@model SistemaGarsonWeb.ViewModel.PratoVM
<!-- INICIO DA TABELA-->
<div class="container">
    <!-- Editable table -->
    <div class="card">
        <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Todos os Pratos</h3>
        <div class="card-body">
            <div id="table" class="table-editable">
                <div class="m-4 float-lg-right">
                    <!-- Material input -->
                    <div class="md-form float-left">
                        @Html.EditorFor(m => m.Campo, new { htmlAttributes = new { @id = "form1", @class = "form-control", @type = "text" } })
                        <label for="form1">Nome do Prato</label>
                    </div>
                    <button type="button" class="btn btn-info px-3"><i class="fas fa-search"></i></button>

                </div>
               
                @*<span class="table-add float-right mb-3 mr-2">
